%h1= fullname(@employee) + ' さんのプロフィール'

.nav.justify-content-end
  = link_to '一覧', employees_path, class: 'nav-link'

%table.table.table-hover
  %tbody
    %tr
      %th= '名前'
      %td= fullname(@employee)
    %tr
      %th= Employee.human_attribute_name(:email)
      %td= @employee.email
    %tr
      %th= Employee.human_attribute_name(:created_at)
      %td= @employee.created_at
      %tr
        %th= Employee.human_attribute_name(:updated_at)
        %td= @employee.updated_at
